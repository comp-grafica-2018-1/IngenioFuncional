	<li><b>Fecha de Solicitud:</b> <%= @cotizacion.created_at %></li>
	<li><b>Tipo de Mueble:</b> Closet Multifuncional</li>
	<li><b>Altura:</b> <%= @cotizacion.alturaCloMul %></li>
